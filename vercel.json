{
  "version": 2,
  "public": true,
  "buildCommand": "cd client/live-poll-frontend && npm install && npm run build",
  "outputDirectory": "client/live-poll-frontend/.next",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/api/:path*"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "/server/api/socket"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SOCKET_URL": "",
    "NODE_ENV": "production"
  }
}